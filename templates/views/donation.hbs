                        <div id="upii" class="upii" style=" width:550px">

                            <input  id="gpayimg" name="upi" type="radio" onclick= "Showgpay()" value="GPay" >
                            <label  for="upi" id="chkgp">Google Pay</label>

                            <input  id="ppayimg" name="upi" type="radio" onclick= "Showgpay()" value="PhonePay" >
                            <label   for="upi" id="chkpp">PhonePe</label>

