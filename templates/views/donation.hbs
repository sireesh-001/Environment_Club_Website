                        <label for="name" id="Account_no"><pre>Name on Card:</pre></label>
                        <input type="text" id="a" name="name" placeholder="Enter Name on card.." ><br>

                        <label for="cardno" id="card_no"><pre>Card Number:</pre></label>
                        <input type="payment" id="b" name=" cardnumber" placeholder=".... .... .... ...." ><br>

