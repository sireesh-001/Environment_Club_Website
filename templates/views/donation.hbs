                        <label for="checkbox" id="chkupi"><pre>UPI Payment</pre></label>

                        <input type="radio" name="checkbox" id="bnk" onclick="showhide()" required>
                        <label for="checkbox" id="bnkdebit"><pre>Debit Card</pre></label>
