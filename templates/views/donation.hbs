<script>

            function showhide(){
            const checkbox = document.getElementById('chk');
            const a = document.getElementById('Transaction');
            const b = document.getElementById('p');
            const check_box = document.getElementById('bnk')
            const c = document.getElementById('Account_no');
            const d = document.getElementById('card_no');
            const e = document.getElementById('Expires');
            const x = document.getElementById('a');
            const y = document.getElementById('b');
            const z = document.getElementById('c');
            const w = document.getElementById('d');
            const cv = document.getElementById('CVV');
            const s = document.getElementById('pil');
            const sa = document.getElementById('pii');
            const upii = document.getElementById('upii');
            

            if(checkbox.checked){
                a.style.display="inline-block";
                b.style.display="inline-block";       
                s.style.display="inline-block";
                sa.style.display="inline-block";
                upii.style.display="inline-block";
                b.required= true;       
                s.required;
                sa.required= true;
                document.getElementById("gpayimg").required=true;
                 document.getElementById("ppayimg").required=true;
                


            }
            else{
                a.style.display="none";
                b.style.display="none"; 
                s.style.display="none";
                sa.style.display="none";
                upii.style.display="none";
            }
            if(check_box.checked){
                c.style.display="inline-block";
                d.style.display="inline-block";
                e.style.display="inline-block";
                x.style.display="inline-block";
                y.style.display="inline-block"; 
                z.style.display="inline-block";
                w.style.display="inline-block";
                cv.style.display="inline-block";


                
                x.required=true;
                y.required=true;
                z.required=true;
                w.required=true;
               
                

            }
            else{
                c.style.display="none";
                d.style.display="none";
                e.style.display="none"; 
                x.style.display="none";
                y.style.display="none"; 
                z.style.display="none";
                w.style.display="none";
                cv.style.display="none";
               
            }


        }




        function Showgpay() 
        {
            const rd = document.getElementById("gpayimg");
            
            const ra = document.getElementById("ppayimg");

            if(rd.checked && (ra.checked==false))
            {
                document.getElementById('Gpay').style.display='inline-block';
            }
            else
            {
                document.getElementById('Gpay').style.display='none';  
            }

            if(ra.checked && (rd.checked==false))
            {
                document.getElementById('Phonepay').style.display='inline-block';
            }
            else
            {
                document.getElementById('Phonepay').style.display='none'; 
            }
        
        }

        
        
</script>
