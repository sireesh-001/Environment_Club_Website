                            <input style="width: 130px;"class="labels"type="text" id="c" name="exdate" placeholder="MM/YY" >

                    
                            <label for="cvv" id="CVV" class="labels"><pre>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; CVV:</pre></label>
                        <input style="width: 130px;"class="labels" type="password" id="d" name="cvv" maxlength="3" minlength="3" placeholder="CVV" >

                        </div>

                    
                        
                        <label class="labels" id="pil"for="contactno"><pre>Phone Number:</pre></label>
                        <input type="tel" id="pii" name="contactno" minlength="10" placeholder="Enter your Phone No." ><br><br>

                        <label class="labels" for="amount"><pre>Amount:</pre></label>
                        <input type="payment" id="pi" name="amount" placeholder="Enter your Amount.." required><br><br>
